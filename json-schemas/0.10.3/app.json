{
  "$ref": "#/definitions/YaoApp.AppDSL",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "YaoApp.AppDSL": {
      "additionalProperties": false,
      "properties": {
        "$schema": {
          "type": "string"
        },
        "adminRoot": {
          "description": "管理后台路由前缀,默认为/yao",
          "type": "string"
        },
        "comment": {
          "description": "备注【管理字段】",
          "type": "string"
        },
        "decription": {
          "description": "描述【管理字段】",
          "type": "string"
        },
        "description": {
          "description": "应用介绍, 支持多语言。",
          "type": "string"
        },
        "favicon": {
          "description": "网站favicon文件地址，根目录/public",
          "type": "string"
        },
        "lang": {
          "description": "配置xgen语言 zh-cn/en-us",
          "type": "string"
        },
        "logo": {
          "description": "logo文件地址，根目录/public",
          "type": "string"
        },
        "menu": {
          "$ref": "#/definitions/YaoApp.MenuDSL",
          "description": "管理后台菜单读取处理器"
        },
        "name": {
          "description": "应用名称, 支持多语言",
          "type": "string"
        },
        "optional": {
          "$ref": "#/definitions/YaoApp.OptionalDSL",
          "description": "应用可选配置项"
        },
        "setting": {
          "description": "xgen获取配置的处理器，默认是yao.app.Xgen",
          "type": "string"
        },
        "setup": {
          "description": "应用首次安装后运行的处理器名称， 一般可以用来建立初始化数据；处理器第一个参数为应用配置信息。支持使用 `studio` 命名空间，调用 studio 脚本函数",
          "type": "string"
        },
        "short": {
          "description": "应用简称, 支持多语言。",
          "type": "string"
        },
        "sid": {
          "type": "string"
        },
        "theme": {
          "description": "默认主题",
          "enum": [
            "light",
            "dark"
          ],
          "type": "string"
        },
        "version": {
          "description": "版本【管理字段】",
          "type": "string"
        },
        "xgen": {
          "description": "XGen 界面引擎版本, 推荐使用 `1.0` 版，旧版已停止维护",
          "type": "string"
        }
      },
      "type": "object"
    },
    "YaoApp.MenuDSL": {
      "additionalProperties": false,
      "properties": {
        "args": {
          "description": "处理器参数表",
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "process": {
          "description": "处理器名称",
          "type": "string"
        }
      },
      "type": "object"
    },
    "YaoApp.OptionalDSL": {
      "properties": {
        "hideNotification": {
          "description": "隐藏系统通知面板。 **字段名大小写敏感**",
          "type": "boolean"
        },
        "hideSetting": {
          "description": "隐藏导航栏下方配置菜单。 **字段名大小写敏感**",
          "type": "boolean"
        },
        "neo": {
          "additionalProperties": false,
          "description": "neo config, for chatgpt service",
          "properties": {
            "api": {
              "type": "string"
            }
          },
          "required": [
            "api"
          ],
          "type": "object"
        },
        "remoteCache": {
          "description": "在xgen中缓存远程select控件选项",
          "type": "boolean"
        }
      },
      "type": "object"
    }
  }
}
