                  },
                  "required": [
                    "process"
                  ],
                  "type": "object"
                },
                "$remote": {
                  "additionalProperties": false,
                  "properties": {
                    "process": {
                      "description": "处理器",
                      "type": "string"
                    },
                    "query": {
                      "description": "请求参数绑定，可使用{{}}绑定记录结构",
                      "type": "object"
                    }
                  },
                  "required": [
                    "process"
                  ],
                  "type": "object"
                }
              },
              "type": "object"
            }
          },
          "type": "object"
        },
        "type": {
          "anyOf": [
            {
              "$ref": "#/definitions/YaoComponent.EditComponentEnum"
            },
            {
              "type": "string"
            },
            {
              "const": "public/xxx",
              "type": "string"
            }
          ],
          "description": "组件名称，可用组件参考文档 https://yaoapps.com/components，public/开关的是远程组件"
